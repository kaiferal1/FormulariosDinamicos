
@{
    Layout = null;
}

<!DOCTYPE html>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
<link href="~/Plugins/Bootstrap-4.0.0/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/toastr.css" rel="stylesheet" />

<link href="~/Content/style/General/loader.css" rel="stylesheet" />
<link href="~/Content/style/General/style.css" rel="stylesheet" />
<link href="~/Content/style/General/tablas.css" rel="stylesheet" />
<link href="~/Content/style/General/webMVC.css" rel="stylesheet" />

<script src="~/Scripts/modernizr-2.6.2.js"></script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <div class="login-page">

        <div class="form">
            <div class="text-center">
                @*<h1 style="color: #cc0033">Dinamic Forms</h1>*@
                <img src="http://gygconsultores.com.mx/plataforma/imagenes/logo-gyg-sm.png" />
            </div>
            <label for="email" data-translate="title-Email" class="lang">Usuario</label>
            <input type="email" class="form-control lang required" id="ctlEmail" aria-describedby="emailHelp" placeholder="Ingresa tu Usuario" data-translate="title-Email-box">
            <label for="password" data-translate="title-Contraseña" class="lang">Contraseña</label>
            <input type="password" class="form-control lang required" id="ctlPass" placeholder="Ingresa tu Contraseña" data-translate="title-Contraseña-box">
            <button id="btnValidar" data-translate="title-Inicio" class="lang">Iniciar Sesion</button>
            <p class="message"> <a data-translate="title-OlvCon" class="lang">Olvide mi Contraseña</a></p>
        </div>
    </div>

    <script src="~/scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Plugins/Bootstrap-4.0.0/js/bootstrap.min.js"></script>
    <script src="~/scripts/toastr.min.js"></script>

    <script src="~/Content/script/General/webMVC.js"></script>
    <script src="~/Content/script/General/ajax.js"></script>
    <script src="~/Content/script/General/forms.js"></script>
    <script src="~/Content/script/General/alerts.js"></script>

    <script src="~/Content/script/Login.js"></script>
</body>
</html>
