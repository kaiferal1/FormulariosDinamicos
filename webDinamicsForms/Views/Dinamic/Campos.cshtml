
@{
    ViewBag.Title = "Campos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="vTbl">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-md-4">
                        <div class="">
                            <label for="cbxMunicipio">Municipio</label>
                            <select class="form-control" id="cbxMunicipio"></select>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="">
                            <label for="cbxSeccion">Seccion</label>
                            <select class="form-control" id="cbxSeccion"></select>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="">
                            <label for="cbxSubSeccion">Sub Seccion</label>
                            <select class="form-control" id="cbxSubSeccion"></select>
                        </div>

                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                        <button type="button" class="btn btn-danger waves-light waves-effect" id="btnNew">Nuevo Formulario</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card-box table-responsive">
                            <table id="tblJson" class="table table-striped table-bordered dt-responsive nowrap">
                                <thead>

                                    <tr>
                                        <th></th>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Formulario</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="vAdd">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h4>Agregar Campos</h4>
                    <br />
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="cbxAddMunicipio">Municipio</label>
                        <select class="form-control" id="cbxAddMunicipio"></select>
                    </div>
                    <div class="form-group">
                        <label for="cbxAddSeccion">Seccion</label>
                        <select class="form-control" id="cbxAddSeccion"></select>
                    </div>
                    <div class="form-group">
                        <label for="cbxAddSubSeccion">Sub Seccion</label>
                        <select class="form-control" id="cbxAddSubSeccion"></select>
                    </div>
                    <div class="form-group">
                        <label>Nombre Formulario</label>
                        <input type="text" class="form-control" id="txtNombre" maxlength="120" />
                    </div>
                    <div class="form-group">
                        <label for="cbxTipoCtrl">Tipo de Control</label>
                        <select class="form-control" id="cbxTipoCtrl">
                            <option value="text" selected>Texto</option>
                            <option value="date" >Fecha</option>
                            <option value="number" >Numeros</option>
                            <option value="email" >Correo</option>
                            <option value="tel" >Telefono</option>
                            <option value="checkbox">Seleccion Multiple</option>
                            <option value="radio">Seleccion Opcional</option>
                            <option value="select" >Lista de Opciones</option>
                        </select>
                    </div>

                    <div class="form-group" id="divOpt">
                        <label>Opciones</label>
                        <input type="text" class="form-control" id="txtOpt" maxlength="100" />
                        <button type="button" class="btn btn-success" id="btnAddOpt">Agregar</button>
                        <div id="txtTagsOpt" data-role="tagsinput"></div>
                    </div>

                    <div class="form-group">
                        <label>Campo</label>
                        <input type="text" class="form-control" id="txtQuestion" maxlength="100" />
                        <button type="button" class="btn btn-success" id="btnAdd">Agregar</button>
                        
                    </div>
                    <div class="form-group">
                        <label for="txtTags">Campos Agregados</label>
                        <div id="txtTags" data-role="tagsinput"></div>
                    </div>
                    <button type="button" class="btn btn-info" id="btnReturn">Regresar</button>
                    <button type="button" class="btn btn-success" id="btnSave">Guardar</button>
                    <button type="button" class="btn btn-danger" id="btnCancelar">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/script/Campos.js"></script>


