
@{
    ViewBag.Title = "Actividades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="vTbl">
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3">
                        <label for="cbxMunicipio">Eje del Plan Municipal</label>
                        <select class="form-control" id="cbxMunicipio"></select>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3">
                        <label for="cbxSeccion">Propósito</label>
                        <select class="form-control" id="cbxSeccion"></select>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3">
                        <label for="cbxSubSeccion">Componente</label>
                        <select class="form-control" id="cbxSubSeccion"></select>
                    </div>
                </div>
                <br />
                <div class="row ">
                    <div class="col-12">
                        <div class="card-box table-responsive">
                            <table id="tblJson" class="table table-striped table-bordered dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>Registrar Actividad</th>
                                        <th>Id</th>
                                        <th>Nombre de Actividad</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="vAdd">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h3 id="lblTitulo"></h3>
                    <br />
                </div>
                <div class="card-body">
                    <div id="inputs">
                    </div>
                    <button type="button" class="btn btn-info" id="btnReturn">Regresar</button>
                    <button type="button" class="btn btn-success" id="btnSave">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Content/script/Formulario.js"></script>
